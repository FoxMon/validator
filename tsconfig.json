{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    // For custom decorator
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  }
}
