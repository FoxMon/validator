{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    // For custom decorator
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "*/*.spec.ts"]
}
